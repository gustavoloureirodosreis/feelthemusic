package{	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.ProgressEvent;	import flash.utils.getDefinitionByName;
	/**	 * Classe para mostrar barra de pre-load enquanto SWF carrega.	 * 	 * Importante	 * ==========	 * Não adicionar depedências para outras classes que não	 * perteçam ao pacote flash.*	 */	public class Preloader extends MovieClip {				// MovieClips da tela		public var loadingBar:MovieClip;				public function Preloader() {			loaderInfo.addEventListener(Event.COMPLETE, loadComplete);			loaderInfo.addEventListener(ProgressEvent.PROGRESS, loadProgress);		}				private function loadComplete(e:Event):void {			// load complete - cleanup and move on			loaderInfo.removeEventListener(Event.COMPLETE, loadComplete);			loaderInfo.removeEventListener(ProgressEvent.PROGRESS, loadProgress);			loadingBar.mcProgress.scaleX = 1; // fully loaded, set bar to full			start();		}				private function loadProgress(e:ProgressEvent):void {			loadingBar.mcProgress.scaleX = e.bytesLoaded / e.bytesTotal;		}				private function start():void {			// continua para próximo frame, onde as classes estão definidas			gotoAndStop(2);						// carrega a classe "FTM" dinamicamente, para não gerar dependência			var GameClass:Class = getDefinitionByName("FTM") as Class;			var game:* = new GameClass();			addChild(game);		}			}}